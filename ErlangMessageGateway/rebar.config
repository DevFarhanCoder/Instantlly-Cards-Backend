%% Erlang Message Gateway - Rebar3 Configuration
{erl_opts, [debug_info]}.

{deps, [
    {cowboy, "2.12.0"},
    {jsx, "3.1.0"},
    {epgsql, "4.7.1"},
    {eredis, "1.7.1"},
    {uuid, "2.0.7", {pkg, uuid_erl}}
]}.

{relx, [
    {release, {message_gateway, "1.0.0"},
     [message_gateway,
      cowboy,
      jsx,
      epgsql,
      eredis,
      uuid,
      sasl]},

    {mode, dev},
    
    {sys_config, "./config/sys.config"},
    {vm_args, "./config/vm.args"},

    {dev_mode, true},
    {include_erts, false},

    {extended_start_script, true}
]}.

{profiles, [
    {prod, [
        {relx, [
            {mode, prod},
            {dev_mode, false},
            {include_erts, true}
        ]}
    ]}
]}.
