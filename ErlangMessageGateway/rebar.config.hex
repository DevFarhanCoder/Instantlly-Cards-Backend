%% Alternative rebar.config using Hex.pm (usually faster)
{erl_opts, [debug_info]}.

{deps, [
    {cowboy, "2.12.0"},
    {jsx, "3.1.0"}
]}.

%% Use Hex.pm as primary source (faster than GitHub)
{hex, [
    {repos, [
        #{name => hexpm,
          api_url => <<"https://hex.pm/api">>,
          repo_url => <<"https://repo.hex.pm/tarballs">>}
    ]}
]}.

{relx, [
    {release, {message_gateway, "1.0.0"},
     [message_gateway, cowboy, jsx, sasl]},
    {mode, dev},
    {sys_config, "./config/sys.config"},
    {vm_args, "./config/vm.args"},
    {dev_mode, true},
    {include_erts, false},
    {extended_start_script, true}
]}.
